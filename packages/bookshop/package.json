            "admin",
            "authenticated-user"
          ],
          "xs.user.attributes": {
            "country": [
              "US"
            ]
          }
        },
        "bob": {
          "password": "123",
          "ID": "bob",
          "roles": [
            "authenticated-user"
          ]
        }
      }
    }
  }
